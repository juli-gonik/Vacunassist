<div class="col container mt-5">
  <h2 class="mb-4">Información personal</h2>
  <div class="card mb-3">
    <div class="card-body" style="background:#f8f9fa;">
      <div class="row">
        <div class="col-sm-3">
          <h6 class="mb-0">Nombre</h6>
        </div>
        <div class="col-sm-9 text-secondary">
          <%="#{@user_vacunator.name} #{@user_vacunator.last_name}"%>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <h6 class="mb-0">Email</h6>
        </div>
        <div class="col-sm-9 text-secondary">
          <%=@user_vacunator.email%>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <h6 class="mb-0">DNI</h6>
        </div>
        <div class="col-sm-9 text-secondary">
          <%=@user_vacunator.dni%>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <h6 class="mb-0">Zona de vacunación</h6>
        </div>
        <div class="col-sm-9 text-secondary">
          <%=@user_vacunator.vacunatorio.zone.capitalize%>
        </div>
      </div>
      
     
      
      
    </div>
    </div>
      <div class="row"> 
        <div class="col-sm-12">
          <%= link_to 'Editar', edit_user_vacunator_path(@user_vacunator), class:'btn btn-success'%>
          <%= link_to 'Editar contraseña', edit_password_user_vacunator_path(@user_vacunator), class:'btn btn-success ms-4'%>
        </div>
      </div>
    </div>
  </div>
