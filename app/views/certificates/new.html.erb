<%= render 'main/header'%>
<div class="container mb-5">
  <h2 class="my-4">Informaci√≥n de vacuna</h2>
  <% user_patient = @appointment.user_patient %>
  <div class="my-3 d-flex flex-column gap-2">
    <h4><i class="fas fa-user-injured"></i> Paciente: <%= "#{user_patient.name} #{user_patient.last_name}" %></h4>
    <h4><i class="fas fa-id-card"></i>  DNI: <%= user_patient.dni %></h4>
  </div>
  <%= form_with model: @certificate do |form| %>
    <div class="row mb-4">
    <%= form.hidden_field :appointment_id, value: @appointment.id%>
      <div class="col">
        <div class="form-outline">
          <%= form.label 'Observaciones', class: 'form-label' %>
          <%= form.text_area :observations, class:'form-control'%>
        </div>
      </div>
    </div>
    <div class="row mb-4">
      <div class="col">
        <%= form.label 'Vacuna', class: 'form-label' %>
        <%= form.select("vaccine", Certificate.vaccines.keys, { include_blank: 'Vacuna' }, class:'form-select') %>
      </div>
    </div>
    <div class="row mb-4">
      <div class="col">
        <div class="form-outline">
          <%= form.label 'Dosis (Solo si es covid)', class: 'form-label' %>
          <%= form.text_field :dose, class:'form-control'%>
        </div>
      </div>
    </div>
    <%=form.submit 'Completar', class:'btn btn-success btn-block mb-4' %>
  <% end %>
</div>