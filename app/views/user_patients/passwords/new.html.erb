<%= render 'main/header'%>
<div class="center-things">
  <div class="py-5 form-container" id='formContent'>
    <h2>¿Olvidaste tu contraseña?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="field text-start mt-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control mt-2' %>
      </div>

      <div class="actions mt-4">
        <%= f.submit "Enviar instrucciones de recuperar contraseña", class:'btn btn-success'%>
      </div>
    <% end %>
    <div class="d-flex ms-3 gap-2 text-success">
      <%= render "user_patients/shared/links" %>
    </div>
  </div>
</div>
